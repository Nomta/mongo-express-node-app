{
    "name": "node-app",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "client": "cross-env NODE_ENV=production webpack --config client/webpack.config.js",
        "client-dev": "cross-env NODE_ENV=development webpack --config client/webpack.config.js",
        "client-watch": "cross-env NODE_ENV=development webpack --config client/webpack.config.js --watch",
        "dev": "concurrently \"npm run server-dev\" \"npm run client-watch\"",
        "hmr": "cross-env NODE_ENV=development webpack-dev-server --open --config client/webpack.config.js",
        "server": "cross-env NODE_ENV=production nodemon ./bin/www",
        "server-dev": "nodemon ./bin/www",
        "build": "npm run client && npm run server",
        "start": "npm run dev"
    },
    "dependencies": {
        "@babel/polyfill": "^7.8.3",
        "@babel/runtime": "^7.12.5",
        "bootstrap": "^4.5.3",
        "bootstrap-icons": "^1.2.1",
        "connect-mongo": "^3.2.0",
        "cookie-parser": "~1.4.4",
        "crypto": "^1.0.1",
        "debug": "~2.6.9",
        "express": "~4.16.1",
        "express-handlebars": "^5.2.0",
        "express-session": "^1.17.1",
        "hbs": "^4.1.1",
        "http-errors": "~1.6.3",
        "lodash": "^4.17.15",
        "mongoose": "^5.5.2",
        "mongoose-beautiful-unique-validation": "^7.1.1",
        "morgan": "~1.9.1",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-redux": "^7.2.2",
        "react-router-dom": "^5.2.0",
        "redux": "^4.0.5"
    },
    "devDependencies": {
        "@babel/core": "^7.8.3",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.12.10",
        "@babel/preset-env": "^7.8.3",
        "@babel/preset-react": "^7.8.3",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^3.0.0",
        "concurrently": "^5.3.0",
        "copy-webpack-plugin": "^5.1.1",
        "cross-env": "^6.0.3",
        "css-loader": "^3.4.2",
        "file-loader": "^5.0.2",
        "handlebars-loader": "^1.7.1",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^4.3.0",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "prettier": "2.1.2",
        "pretty-quick": "^3.1.0",
        "sass-loader": "^8.0.2",
        "script-ext-html-webpack-plugin": "^2.1.5",
        "style-loader": "^1.1.2",
        "terser-webpack-plugin": "^2.3.2",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.10.1",
        "webpack-notifier": "^1.12.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
